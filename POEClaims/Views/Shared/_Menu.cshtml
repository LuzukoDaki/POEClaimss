@{
    var userRole = Context.Session.GetString("UserRole");
}

<div style="display:flex; width:100%; height:50px; color:white; background-color:black; gap:10px; align-items:center; padding:5px;">
    <a href="@Url.Action("Index", "Home")">
        <button class="gray-btn">Home</button>
    </a>

    <a href="@Url.Action("Submit", "Claim")">
        <button class="gray-btn">Claim</button>
    </a>

    @* Role-based buttons *@
    @if (userRole == "Lecturer")
    {
        <a href="@Url.Action("Index", "Claim")">
            <button class="gray-btn">View Claims</button>
        </a>
    }
    else if (userRole == "PC" || userRole == "AM")
    {
        <a href="@Url.Action("Index", "Claim")">
            <button class="gray-btn">View All Claims</button>
        </a>
        <a href="@Url.Action("Pre_Approve", "Home")">
            <button class="gray-btn">Pre-Approve</button>
        </a>
        <a href="@Url.Action("ApproveClaimIndex", "Home")">
            <button class="gray-btn">Approved Claims</button>
        </a>
    }
</div>
