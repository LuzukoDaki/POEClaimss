﻿@{
ViewData["Title"] = " Project_Manager ";
}

@Html.Partial("_Sum")

<div class="card" style="max-width: 700px; margin: 40px auto; padding: 40px 50px;">
    <h1 style="color: darkgray; font-weight: 700; font-size: 2.8rem; text-align: center; margin-bottom: 1rem;">
        Welcome to ACA Claims Portal
    </h1>

    <p style="color: #cfd8dc; font-size: 1.15rem; line-height: 1.7; margin-bottom: 1.8rem; text-align: center;">
        Simplifying the monthly claims process for lecturers — submit, manage, and track your claims all in one place.
    </p>

    <ul style="color: #b0bec5; font-size: 1.1rem; line-height: 1.7; list-style: none; padding-left: 0; margin-bottom: 2rem;">
        <li style="margin-bottom: 0.8rem;">
            <span style="color: #00bfff; font-weight: 600; margin-right: 10px;"></span>
            Effortlessly upload supporting documents
        </li>
        <li style="margin-bottom: 0.8rem;">
            <span style="color: #00bfff; font-weight: 600; margin-right: 10px;"></span>
            Fill out structured claim forms with ease
        </li>
        <li>
            <span style="color: #00bfff; font-weight: 600; margin-right: 10px;"></span>
            Track your claim’s progress from submission to final approval
        </li>
    </ul>

    <p style="color: #90a4ae; font-size: 1.05rem; text-align: center; margin-bottom: 2.5rem;">
        Built-in validation ensures every claim is accurate, consistent, and complete before submission.
    </p>

    <hr style="border-color: #263238; margin: 0 0 2.5rem 0;"

    <h3 style="color: #eceff1; font-weight: 700; font-size: 1.8rem; margin-bottom: 1rem;">
        How Claims Are Processed As A PM
    </h3>

    <ol style="color: #b0bec5; font-size: 1.1rem; line-height: 1.7; padding-left: 20px; margin-bottom: 1.5rem;">

        <li>
            <strong>Program Manager</strong> review and make the final decision to <span style="color: #f0ad4e;">approve</span> or <span style="color: #dc3545;">reject</span>.
        </li>
    </ol>

    <p style="color: #78909c; font-size: 1rem; text-align: center;">
        Each user has access and responsibilities based on their <strong>role</strong> in the system.
    </p>
</div>